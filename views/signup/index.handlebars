<div class="registration" style="background-color: #C5C1C0; background-image:url(/img/backgrounds/1.jpg); width: 100%; height: 100%">
  <div class="top-content">
    <div class="container" style="text-align: center">
      <div class="row">
        <div class="col-sm-12 col-sm-offset-2 text">
          <h1 style="margin-top: 50px; width: 100%">Sign Up Here</h1>
          <div class="description">
          </div>
        </div>
      </div>

      <div class="row register-form" method="post">
        <div class="col-sm-12 col-sm-offset-1">
          <form role="form" action="" method="post" class="r-form">
            <div class="col-sm-4 col-sm-offset-1" style="width: 50%; float: left">
              <div class="form-group">
                <label class="sr-only" for="r-form-first-name">First name</label>
                <input type="text" name="r-form-first-name" placeholder="First name..." class="r-form-first-name form-control" id="r-form-first-name">
              </div>
              <div class="form-group">
                <label class="sr-only" for="r-form-last-name">Last name</label>
                <input type="text" name="r-form-last-name" placeholder="Last name..." class="r-form-last-name form-control" id="r-form-last-name">
              </div>

              <div class="form-group">
                <label class="sr-only" for="r-form-email">Email</label>
                <input type="text" name="r-form-email" placeholder="Email..." class="r-form-email form-control" id="r-form-email">
              </div>
            </div>
            <div class="col-sm-4 col-sm-offset-1" style="width: 50%; float: right">
              <div class="form-group">
                <label class="sr-only" for="r-form-username">Username</label>
                <input type="text" name="r-form-username" placeholder="Username..." class="r-form-username form-control" id="r-form-username">
              </div>
              <div class="form-group">
                <label class="sr-only" for="r-form-password">Password</label>
                <input type="text" name="r-form-password" placeholder="Password..." class="r-form-password form-control" id="r-form-password">
              </div>
              <div class="form-group">
                <label class="sr-only" for="r-form-com-password">Confirm Password</label>
                <input type="text" name="r-form-com-password" placeholder="Confirm Password..." class="r-form-com-password form-control" id="r-form-com-password">
              </div>
            </div>
          </form>
        </div>
        <div class="col-sm-12">
          <button type="submit" class="btn" style="background-color: #C5C1C0; box-shadow: 6px 6px 6px #2b638f; font-weight: bold; margin-top: 20px">Sign Up</button>
        </div>
      </div>
    </div>
  </div>
</div>
