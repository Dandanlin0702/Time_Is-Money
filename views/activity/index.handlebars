<section class="view intro-3 hm-gradient" style="margin-top: 10px, font-family: helvetica, verdana, palatino">
    <div class="full-bg-img" style="background: -webkit-linear-gradient(45deg, rgba(255, 255, 255, 0.2) 90%);">
        <div class="container flex-center">
        <div class="col-md-6">
            <!--List-->
            <div class="card wow fadeInRight" data-wow-delay="0.5s">
                <div class="card-body">
                    <!--Header-->
                    <div class="text-center">
                        <h3 class="white-text"><i class="fa fa-server white-text"></i> Services You Requested</h3>
                        <hr class="hr-light">
                    </div>
                    <div class="text-justify">
                        {{!-- only output following info if requested services exists --}}
                        {{#if servicesreq}}
                            <!--Body-->
                            {{#each servicesreq}}
                                <div class="service-preview">
                                    <h4 class="service-name">
                                        {{service_name}}
                                    </h4>
                                    <ol class="text-justify">
                                        <li>
                                            <strong>Credit: </strong>{{this.num_hours}}
                                        </li>
                                        <li>
                                            <strong>Accepted: </strong>{{this.is_accepted}}
                                        </li>
                                        <li>
                                            <strong>Time: </strong>{{this.requested_datetime}}
                                        </li>
                                    </ol>
                                </div>
                                <hr>
                            {{/each}}
                            {{else}}
                                <div class="text-center">
                                    <p>
                                        OOPS. YOUR LIST IS EMPTY
                                        <br>
                                        <a href="/profile/new"><strong>CLICK HERE</strong></a> to start your first order.
                                    </p>
                                </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        <!--/.List-->
        </div>

        <div class="col-md-6">                        <!--Form-->
            <div class="card wow fadeInRight" data-wow-delay="0.5s">
                <div class="card-body">
                    <!--Header-->
                    <div class="text-center">
                        <h3 class="white-text"><i class="fa fa-server white-text"></i> Services You Offered</h3>
                        <hr class="hr-light">
                    </div>
                    <div class="text-justify">
                        {{#if servicesoff}}
                            <!--Body-->
                            {{#each servicesoff}}
                                <div class="service-preview">
                                    <h3 class="service-name">
                                        {{service_name}}
                                    </h3>
                                    <ol class="text-justify">
                                        <li>
                                             <strong>Description: </strong>{{this.description}}
                                        </li>
                                        <li>
                                            <strong>Location: </strong>{{this.location}}
                                        </li>
                                        <li>
                                            <strong>Time: </strong>{{this.created_at}}
                                        </li>
                                    </ol>
                                </div>
                                <hr>
                            {{/each}}
                            {{else}}
                                <div class="text-center">
                                    <img src="">
                                    <p>
                                        OOPS. YOUR LIST IS EMPTY
                                        <br>
                                        <a href="#"><strong>CLICK HERE</strong></a> to create an Offer</a>
                                    </p>
                                </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
