<div class="text-center">
<div class="container container-fluid col-sm-6 ">
  <div class="field-container">
  <h1 class="text-center">Create an Offer</h1>
  <br />

  <form action="/profile" method="POST" class="form-horizontal">
    <div class="form-group">
        <label class="col-xs-3 control-label">Title</label>
        <div class="col-xs-7">
            <input type="text" class="form-control" name="title" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-xs-3 control-label">Description</label>
        <div class="col-xs-7">
            <input type="text" class="form-control" name="description" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-xs-3 control-label">Location</label>
        <div class="col-xs-7">
            <input type="text" class="form-control" name="location" />
        </div>
    </div>

    <div class="form-group">
      <label for="categories_select">Category</label>
      <select class="form-control" id="categories_select">
        {{#each categories}}
          <option id="{{id}}">{{category_name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <div class="form-group">
        <label>Subcategory</label>
        <select class="form-control subcategories_select" name="subcategory">
          {{#each subcategories}}
            <option value="{{id}}">{{subcategory_name}}</option>
          {{/each}}
        </select>
      </div>
    </div>


    <div class="form-group">
        <div class="col-xs-7 col-xs-offset-3">
            <button id="submit" type="submit" class="btn btn-default btn-success">Submit</button>
        </div>
    </div>
</form>

</div>
</div>
