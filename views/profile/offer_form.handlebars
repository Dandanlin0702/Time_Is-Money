<div class="container container-fluid">
  <div class="field-container">
  <h1 class="text-center">Create an Offer</h1>
  <br />

  <form action="/polls" method="POST" class="form-horizontal">
    <div class="form-group">
        <label class="col-xs-3 control-label">Title</label>
        <div class="col-xs-7">
            <input type="text" class="form-control" name="title" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-xs-3 control-label">Description</label>
        <div class="col-xs-7">
            <input type="text" class="form-control" name="description" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-xs-3 control-label">Location</label>
        <div class="col-xs-7">
            <input type="text" class="form-control" name="location" />
        </div>
    </div>

    <div class="form-group">

        {{#each subcategories}}
          <li>{{subcategory_name}}</li>
        {{/each}}

    </div>

    <div class="form-group">
        <div class="col-xs-7 col-xs-offset-3">
            <button id="submit" type="submit" class="btn btn-default btn-success">Submit</button>
        </div>
    </div>
</form>

</div>
</div>
