<div class="container-fluid">
  <div class="container">
    <div class="col-md-12">
      <div class="mt-4 card z-depth-3">
        <div class="card-header info-color-dark text-center text-white">
          <h2 class="h2-responsive font-bold">Offer a Service</h2>
        </div>
        <div id="service-form" class="card-body">
          <div class="row">
            <div class="col-md-5">
              <form action="/profile" method="POST">
                <div class="form-group black-text">
                  <label for="title">Title</label>
                  <input type="text" name="title" class="form-control" placeholder="ie. Belly Rubs for All Doggos" required>
                </div>
                <div class="form-group black-text">
                  <label for="description">Description</label>
                  <textarea class="form-control" name="description" id="description" rows="10" placeholder="I will rub all the doggo bellies to their heart contents. They will leave a very satisfied good boy or girl." required></textarea>
                </div>
                <div class="form-group black-text">
                  <label for="location">Location</label>
                    <div class="form-inline black-text">

                    <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" name="city" placeholder="New York">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                      <input type="text" class="form-control" id="inlineFormInputGroup" name="state" placeholder="NY">
                    </div>
                  <!-- <label for="location">Location</label>
                  <input id="location" type="text" name="city" class="form-control" required>
                  <input type="text" name="state" class="form-control" required> -->
                </div>
              </div>
            </div>
            <div class="col-md-5 offset-md-1">
              <div class="form-group">
                <label for="categories_select">Category</label>
                <select class="form-control" id="categories_select">
              {{#each categories}}
                <option id="{{id}}">{{category_name}}</option>
              {{/each}}
            </select>
              </div>
              <div class="form-group">
                <div class="form-group">
                  <label>Subcategory</label>
                  <select class="form-control subcategories_select" name="subcategory">
                {{#each subcategories}}
                  <option value="{{id}}">{{subcategory_name}}</option>
                {{/each}}
              </select>
                </div>
              </div>
            </div>
          </div>
          <hr>
          <div class="text-center">
            <a href="/profile" class="btn btn-danger" rel="nofollow">Cancel</a>
            <button id="submit" type="submit" class="btn btn-success">Submit</button>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
